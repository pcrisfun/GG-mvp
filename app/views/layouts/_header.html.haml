/ Page Header
%header#masthead
  %nav.navbar.navbar-fixed-top
    .navbar-inner
      .container
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.fa.fa-bars
        %a.brand{:href => root_path}
          %h1#logo GirlsGuild
        .nav-collapse
          %ul.nav.pull-left
            %li.unlinked Apprenticeships &nbsp;
            = active_link_to( content_tag(:i, '', class: 'fa fa-pencil fa-fw')+ ' Start', new_apprenticeship_path, :wrap_tag => :li, class: 'apprentlinks', :active => :exclusive )
            = active_link_to( content_tag(:i, '', class: 'fa fa-search fa-fw')+ ' Find', events_path, :wrap_tag => :li, class: 'apprentlinks', :active => :exclusive )

          %ul.nav.pull-right
            = active_link_to 'Makers', makers_path, :wrap_tag => :li, :active => :exclusive
            / %li.dropdown.apprentlinks
            /   %a{"data-target" => "#", :href => "/events"}
            /     Makers
            /   %ul.dropdown-menu
            /     = active_link_to( content_tag(:i, '', class: 'fa fa-eye fa-fw')+ ' Follow Makers', makers_path, :wrap_tag => :li, :active => :exclusive )
            /     = active_link_to( content_tag(:i, '', class: 'fa fa-list fa-fw')+ ' Get Listed', new_apprenticeship_path, :wrap_tag => :li, :active => :exclusive )

            = active_link_to 'How it works', new_apprenticeship_path, :wrap_tag => :li, :active => :exclusive

            %li.dropdown
              %a{"data-target" => "#", :href => "#"}
                Help
              %ul.dropdown-menu
                = active_link_to( content_tag(:i, '', class: 'fa fa-bookmark fa-fw')+ ' FAQ', faq_path, :wrap_tag => :li, :active => :exclusive )
                = active_link_to( content_tag(:i, '', class: 'fa fa-comments-o fa-fw')+ ' Testimonials', testimonials_path, :wrap_tag => :li, :active => :exclusive )
                = active_link_to content_tag(:i, '', class: 'fa fa-heart fa-fw') + ' Nominate', nominate_path+"#nominate", :wrap_tag => :li, :active => :exclusive
                = active_link_to content_tag(:i, '', class: 'fa fa-gift fa-fw') + ' Scholarships', faq_path+"#donate", :wrap_tag => :li, :active => :exclusive
                = active_link_to( content_tag(:i, '', class: 'fa fa-map-marker fa-fw')+ ' Contact', contact_path, :wrap_tag => :li, :active => :exclusive )


            - if signed_in?
              / %li.dropdown.alertnav
              /   %a{"data-target" => "#", :href => "/dashboard"}
              /     .i.fa.fa-bell-o
              /   .alertbox
              /     1

              %li.dropdown.login-nav
                %a{:href => "#"}
                  = current_user.first_name
                  = avatar_for(current_user, size: 25, tag: 'small')
                %ul.dropdown-menu
                  = active_link_to( content_tag(:i, '', class: 'fa fa-calendar fa-fw')+ ' My Events', dashboard_path, :wrap_tag => :li, :active => :exclusive )
                  - if current_user.admin?
                    = active_link_to( content_tag(:i, '', class: 'fa fa-cog fa-fw')+ 'Admin', admin_path, :wrap_tag => :li, :active => :exclusive)
                    = active_link_to( content_tag(:i, '', class: 'fa fa-signal fa-fw')+ 'Metrics', metrics_path, :wrap_tag => :li, :active => :exclusive)
                  = active_link_to( content_tag(:i, '', class: 'fa fa-lock fa-fw')+ ' Settings', edit_user_registration_path(current_user), :wrap_tag => :li, :active => :exclusive )
                  = active_link_to( content_tag(:i, '', class: 'fa fa-user fa-fw')+ ' Avatar', avatar_path, :wrap_tag => :li, :active => :exclusive )
                  = active_link_to( content_tag(:i, '', class: 'fa fa-credit-card fa-fw')+ ' Billing', billing_path, :wrap_tag => :li, :active => :exclusive )
                  /= active_link_to content_tag(:i, '', class: 'fa fa-picture-o') + ' Portfolio', albums_path, :wrap_tag => :li, :active => :exclusive
                  %li.divider
                  = active_link_to 'Sign out', destroy_user_session_path, :wrap_tag => :li, method: "delete"
            - else
              = active_link_to 'Log in', new_user_session_path, :wrap_tag => :li, class: 'login-nav'
              %li.or or
              = active_link_to 'Sign up', new_user_registration_path, :wrap_tag => :li, class: 'signup-nav'

            / %li
            /   = link_to( content_tag(:i, '', class: 'fa fa-pencil fa-fw')+ "Post an Apprenticeship", new_apprenticeship_path, class: 'post-apprenticeship')
